<Window x:Class="Automate.Views.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automate.Views"
        mc:Ignorable="d"
        Title="Tâche Window" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Détails de la tâche" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Type:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Type}" Margin="0,0,0,10"/>
            <TextBlock Text="Description:" FontWeight="Bold"/>
            <TextBox Text="{Binding Description}" Margin="0,0,0,10" IsReadOnly="True"/>
            <TextBlock Text="Date:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}" Margin="0,0,0,10"/>
            <TextBlock Text="Alert:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Alert}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
